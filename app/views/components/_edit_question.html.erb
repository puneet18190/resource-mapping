<table id="question-table" class="table table-hover table-striped">
  <thead>
    <th>Title</th>
    <th>Help</th>
  <th></th>
  </thead>
  <tbody>
    <%= f.fields_for(:questions) do |question| %>
      <tr class="fields">
        <td><%= question.text_field(:title) %></td>
        <td><%= question.text_field(:help) %></td>
        <%# if current_page?(new_ship_path) || current_page?(edit_ship_path) %>
            <td>
              <%#= link_to_remove_fields('<i class="icon-remove"></i>'.html_safe, question, :title => "Delete this Pilot.") %>
            </td>
        <%# end %>
      </tr> 
    <% end %>
  </tbody>
</table>
