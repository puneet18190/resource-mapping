<table id="resource-table" class="table table-hover table-striped">
  <thead>
    <th>Title</th>
    <th>Type</th>
    <th>Url</th>
  <th></th>
  </thead>
  <tbody>
    <%= f.fields_for(:resources) do |resource| %>
      <tr class="fields">
        <td><%= resource.text_field(:title) %></td>
        <td><%= resource.text_field(:r_type) %></td>
        <td><%= resource.text_field(:url) %></td>
        <%# if current_page?(new_ship_path) || current_page?(edit_ship_path) %>
            <td>
              <%#= link_to_remove_fields('<i class="icon-remove"></i>'.html_safe, resource, :title => "Delete this Pilot.") %>
            </td>
        <%# end %>
      </tr> 
    <% end %>
  </tbody>
</table>
