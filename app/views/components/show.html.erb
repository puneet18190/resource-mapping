<div class="container">
	<ol class="breadcrumb">
	    <li><a href="/">Home</a></li>
	    <li><a href="/tools">Tools</a></li>
	    <li><a href=<%="#{content_template_tool_path(params[:tool_id])} "%>>Content Template</a></li>
	    <li><a href=<%="#{add_components_tool_path(params[:tool_id])} "%>>Components</a></li>
	    <li class="active">Show Content</li>
	  </ol>
	<div class="page-header">
	  <h1>Show Component</h1>
	  <h2>Section: <%= @component.section.title %></h2>
	</div>
	<%#= form_for @component,url: tool_section_component_path(params[:tool_id],params[:section_id],params[:id]), :html => { :class => "form-horizontal component" } do |f| %>
	  <dl class="dl-horizontal">
	    <dt><strong>Title:</strong></dt>
	    <dd><%= @component.title %></dd>
	    <dt><strong>Description:</strong></dt>
	    <dd><%= @component.description %></dd>
	  </dl>
	  <hr>
	  	<h3>Resources:</h3>
	    <table class="table table-striped table-bordered">
		    <thead>
		      <tr>
		        <th>Title</th>
		        <th>Type</th>
		        <th>Url</th>
		      </tr>
		    </thead>
		    <tbody>
		      <% @component.resources.each do |resource| %>
		        <tr>
		          <td><%= resource.title %></td>
		          <td><%= resource.r_type %></td>
		          <td><%= resource.url %></td>
		        </tr>
		      <%end%>
		    </tbody>
		</table>

		<hr>
		<h3>Assessment Questions:</h3>
		<table class="table table-striped table-bordered">
		    <thead>
		      <tr>
		        <th>Title</th>
		        <th>Help</th>
		      </tr>
		    </thead>
		    <tbody>
		      <% @component.questions.each do |question| %>
		        <tr>
		          <td><%= question.title %></td>
		          <td><%= question.help %></td>
		        </tr>
		      <%end%>
		    </tbody>
		</table>   
	<%= link_to 'Back',
            add_components_tool_path(params[:tool_id]), :class => 'btn btn-default' %>	       
		          
</div>

